<header class="site-header">
    <div class="row">
        {{#if @blog.logo}}
        <div class="one column">
            <a class="logo-link" title="{{@blog.title}}" href="{{@blog.url}}">
                <img src="{{@blog.logo}}" alt="{{@blog.title}}" class="blog-logo" />
            </a>
        </div>
        <div class="eleven columns">
            <h1 class="title">
                <a href="{{@blog.url}}" title="{{@blog.title}}">{{@blog.title}}</a>
            </h1>
            <h6 class="subtitle">{{@blog.description}}</h6>
        </div>
        {{else}}
        <div class="twelve columns">
            <h1 class="title">
                <a href="{{@blog.url}}" title="{{@blog.title}}">{{@blog.title}}</a>
            </h1>
            <h6 class="subtitle">{{@blog.description}}</h6>
        </div>
        {{/if}}
    </div>
</header>

{{navigation}}