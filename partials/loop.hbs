{{! This is the post loop - each post will be output using this markup }}
<section class="posts">
{{#foreach posts}}
	<article>
		<h4 class="list-headline">
			<a href="{{url}}" title="{{{title}}}">{{{title}}}</a>
		</h4>
		<p>{{excerpt words="50"}}... <a class="continue-reading" href="{{url}}">continue reading &raquo;</a></p>
	</article>
{{/foreach}}
</section>
{{! Previous/next page links - displayed on every page }}
<section class="blog-navigation text-center">
	{{pagination}}
</section>